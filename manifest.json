{
  "name": "Browser Time Tracker",
  "version": "1.0",
  "manifest_version": 3,

  "description": "Tracks browser usage time and reminds you every hour.",
  "permissions": ["alarms", "storage", "notifications"],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
